<!--pages/paySuccess/paySuccess.wxml-->

<view class='page'>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell">
      
      <view class="weui-cell__bd">头像</view>
      <view class="weui-cell__hd">
        <image src="{{avatarUrl}}" style="vertical-align: middle;width:128rpx; height: 128rpx;border-radius:4rpx;"></image>
      </view>
    </view>
    <view class="weui-cell">
      <view class="weui-cell__bd">昵称</view>
      <view class="weui-cell__ft">{{nickName}}</view>
    </view>
    <view class="weui-cell">
      <view class="weui-cell__bd">性别</view>
      <view class="weui-cell__ft">{{gender}}</view>
    </view>
    <view class="weui-cell">
      <view class="weui-cell__bd">手机号</view>
      <view class="weui-cell__ft font_blue" bindtap="bindPhone">{{phoneNum}}</view>
    </view>
  </view>
</view>